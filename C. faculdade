#include <stdio.h>


int main (void)
{
  int cod;
  scanf("%d", &cod);
  int quant;
  scanf("%d", &quant);
  if (cod == 1)
  {
    double total = 4.00 * quant;
    printf("Total: R$ %.2lf\n", total );
  }
  else if (cod == 2)
  {
    double total = 4.50 * quant;
    printf("Total: R$ %.2lf\n", total );
  }
  else if (cod == 3)
  {
    double total = 5.00 * quant;
    printf("Total: R$ %.2lf\n", total );
  }
  else if (cod == 4)
  { 
    double total = 2.00 * quant;
    printf("Total: R$ %.2lf\n", total );
  }
  else if (cod == 5)
  {
    double total = 1.50 * quant;
    printf("Total: R$ %.2lf\n", total );
  }
  return 0;
}

 
