#include <stdio.h>

//receber os dados do meu usuario:
    //nome
    //salario
    //total de vendas
// fazer o calculo de vendas
    // A cada venda ele recebe 15%
//digite seu nome
//digite seu salario
//digite o total de vendas
//vendas + 15%
int main (void)
{
  char nome [50];
  
  scanf("%s", nome);
  
  double salario;
  
  scanf("%lf", &salario);

  double vendas;
  
  scanf("%lf", &vendas);

  double comissao = (vendas * 0.15);

  double total = salario + comissao;
  
  printf("TOTAL = R$ %.2lf\n", total);
  
}
