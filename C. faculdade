#include <stdio.h>
#include <stdlib.h>

int main(void) {
    int a, b, s;
    scanf("%i %i %i", &a, &b, &s);

    int maiorab = (a + b + abs(a - b)) / 2;
    int maior = (maiorab + s + abs(maiorab - s)) / 2;

    printf("%d eh o maior\n", maior);
